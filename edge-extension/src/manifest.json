{
  "manifest_version": 3,
  "name": "Jira Action Items Manager",
  "version": "1.0.0",
  "description": "Manage Jira action items through natural language commands",
  "permissions": [
    "storage",
    "notifications",
    "sidePanel",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:8000/*"
  ],
  "side_panel": {
    "default_path": "html/sidebar.html"
  },
  "action": {
    "default_title": "Jira Action Items",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "js/background.js"
  }
}
