# .env example file for the Python FastAPI server
# Copy this to .env and fill in the appropriate values

# Environment settings
ENVIRONMENT=development  # development, staging, production
DEBUG=True

# Server settings
HOST=0.0.0.0
PORT=8000

# CORS settings - for development, allow all origins
# In production, restrict to your extension's origin
CORS_ORIGINS=*

# MCP-Atlassian server settings
MCP_SERVER_URL=http://localhost:9000/sse

# OpenRouter API Key - Get one from https://openrouter.ai/
OPENROUTER_API_KEY=your_openrouter_api_key
OPENROUTER_MODEL=meta-llama/llama-3-8b-instruct

# SQLite database settings
DATABASE_URL=sqlite:///./jcai.db

# SQLite settings
SQLITE_DB_URL=sqlite:///./jcai.db
