# API Configuration
API_HOST=localhost
API_PORT=8000
SITE_URL=http://localhost:8000

# JIRA Configuration - Basic Auth (for server-to-server communication)
JIRA_URL=https://your-domain.atlassian.net
JIRA_USERNAME=your-email@example.com
JIRA_API_TOKEN=your_api_token_here
DEFAULT_JIRA_PROJECT_KEY=PROJ

# Jira OAuth 2.0 Configuration (for browser-based authentication)
JIRA_OAUTH_CLIENT_ID=your_client_id_here
JIRA_OAUTH_CLIENT_SECRET=your_client_secret_here
JIRA_OAUTH_CALLBACK_URL=http://localhost:8000/api/auth/callback

# LLM Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here
DEFAULT_LLM_MODEL=meta-llama/llama-3-8b-instruct
FALLBACK_LLM_MODEL=openai/gpt-3.5-turbo
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=400
LLM_CACHE_TTL_HOURS=24

# Database Configuration
DATABASE_URL=sqlite:///./app.db

# Memory Configuration
MEMORY_PATH=./memory.jsonl
USE_FALLBACK_MEMORY=True

# Reminder Configuration
REMINDER_CHECK_INTERVAL=300

# Debug Configuration
DEBUG=True
LOG_LEVEL=info
